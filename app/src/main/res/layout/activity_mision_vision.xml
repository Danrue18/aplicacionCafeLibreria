<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO DE LA PANTALLA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUESTRA ESENCIA"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- SECCIÓN 1: MISIÓN -->
        <TextView
            android:text="MISIÓN"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Brindar un espacio donde el café artesanal y la literatura se unan para inspirar creatividad y buenos momentos, convirtiendo cada visita en un nuevo 'Capítulo Uno'."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- SECCIÓN 2: VISIÓN -->
        <TextView
            android:text="VISIÓN"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Ser la cafetería-librería favorita de estudiantes, lectores y creadores en la región, destacando por su ambiente acogedor, la calidad de sus productos y las enriquecedoras experiencias culturales que ofrece."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- SECCIÓN 3: ACTIVIDAD DE LA EMPRESA -->
        <TextView
            android:text="ACTIVIDAD PRINCIPAL"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Nos dedicamos a la venta minorista de café de especialidad, bebidas temáticas y pastelería artesanal. Complementamos esta oferta con la comercialización de libros nuevos y colecciones completas. Nuestro valor añadido es la realización de actividades literarias y culturales periódicas."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="30dp" />

        <!-- Botón de retorno -->
        <Button
            android:id="@+id/btnVolver"
            android:text="Volver al Menú"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#A1887F"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"/>

    </LinearLayout>
</ScrollView>