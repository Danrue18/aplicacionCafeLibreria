<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloContacto"
            android:text="Contáctanos"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:lineSpacingExtra="4dp"/>

        <!-- TARJETA: CORREO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@android:drawable/ic_dialog_email"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#6D4C41"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Correo Electrónico"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4E342E"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="servicioalcliente@capitulouno.com"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TARJETA: TELÉFONO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@android:drawable/ic_menu_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#6D4C41"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Teléfono"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4E342E"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="300 212 4567"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TARJETA: DIRECCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@android:drawable/ic_menu_mylocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#6D4C41"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Dirección"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4E342E"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Carrera 29 #45-30
Barrio Cabecera del Llano
Bucaramanga, Santander, Colombia
Código Postal 68000
(A una cuadra del Parque Turbay, zona de alto flujo estudiantil y cultural)"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- BOTÓN VOLVER -->
        <Button
            android:id="@+id/btnVolver"
            android:text="Volver al Menú"
            android:backgroundTint="#8D6E63"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>

